{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {"include": "./mail/templates/*.pug","outDir": "./dist/src"},
      {"include": "./public/*.png", "outDir": "./dist/src"}
  ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
